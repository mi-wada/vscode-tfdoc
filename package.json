{
	"name": "tfdoc",
	"publisher": "mi-wada",
	"displayName": "Open Terraform Docs",
	"description": "Open Terraform Provider documentation in your browser.",
	"version": "0.0.5",
	"repository": {
		"type": "git",
		"url": "https://github.com/mi-wada/vscode-tfdoc"
	},
	"keywords": [
		"terraform",
		"documentation",
		"docs"
	],
	"activationEvents": [
		"onLanguage:terraform",
		"onLanguage:hcl"
	],
	"categories": [
		"Other"
	],
	"engines": {
		"vscode": "^1.106.1"
	},
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "tfdoc.openDocs",
				"title": "Open Terraform Provider Docs",
				"category": "tfdoc"
			}
		],
		"keybindings": [
			{
				"command": "tfdoc.openDocs",
				"key": "ctrl+; ctrl+t",
				"mac": "cmd+; cmd+t",
				"when": "editorTextFocus && (editorLangId == terraform || editorLangId == hcl)"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "npm run check-types && npm run lint && node esbuild.js",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"package": "npm run check-types && npm run lint && node esbuild.js --production",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"check-types": "tsc --noEmit",
		"test": "vscode-test",
		"lint": "biome check",
		"lint:fix": "biome check --write --unsafe",
		"release": "vsce publish"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.13",
		"@types/mocha": "10.0.10",
		"@types/node": "22.x",
		"@types/vscode": "1.108.1",
		"@vscode/test-cli": "0.0.12",
		"@vscode/test-electron": "2.5.2",
		"esbuild": "0.27.2",
		"typescript": "5.9.3"
	}
}
